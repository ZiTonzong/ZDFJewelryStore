<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>ZDFJewelryStore_Demo</display-name>
  <welcome-file-list>
    <welcome-file>app/AboutBlank.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>com.ZDF.servlet.HandleRegister</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/handleRegister</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.ZDF.servlet.HandleLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/handleLogin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>index2</servlet-name>
    <servlet-class>com.ZDF.servlet.HandleAllProducts</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>index2</servlet-name>
    <url-pattern>*.doo</url-pattern>
  </servlet-mapping>
  
